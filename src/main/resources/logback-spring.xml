<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Log file pattern and location -->
    <property name="LOG_HOME" value="./logs" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n" />

    <!-- Console appender for printing logs to the console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File appender for writing logs to a file -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_HOME}/application.log</file>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Flyway specific logging -->
    <logger name="org.flywaydb.core" level="DEBUG" />
    <logger name="org.flywaydb.core.internal" level="DEBUG" />
    <logger name="org.flywaydb.core.internal.database" level="DEBUG" />

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

</configuration>
